{
  "version": "2.0-gold",
  "last_updated": "2026-02-28",
  "servers": [
    {
      "name": "email",
      "command": "python",
      "args": ["email_reply.py"],
      "env": {
        "GMAIL_CREDENTIALS": "credentials.json"
      },
      "status": "active"
    },
    {
      "name": "whatsapp",
      "command": "python",
      "args": ["whatsapp_reply.py"],
      "env": {},
      "status": "active"
    },
    {
      "name": "linkedin",
      "command": "python",
      "args": ["linkedin_poster.py"],
      "env": {},
      "status": "active"
    },
    {
      "name": "twitter",
      "command": "python",
      "args": ["twitter_poster.py"],
      "env": {
        "TWITTER_API_KEY": "${TWITTER_API_KEY}",
        "TWITTER_API_SECRET": "${TWITTER_API_SECRET}"
      },
      "status": "configured"
    },
    {
      "name": "facebook",
      "command": "python",
      "args": ["facebook_poster.py"],
      "env": {
        "FACEBOOK_PAGE_ACCESS_TOKEN": "${FACEBOOK_PAGE_ACCESS_TOKEN}",
        "FACEBOOK_PAGE_ID": "${FACEBOOK_PAGE_ID}"
      },
      "status": "configured"
    },
    {
      "name": "instagram",
      "command": "python",
      "args": ["instagram_poster.py"],
      "env": {
        "INSTAGRAM_BUSINESS_ID": "${INSTAGRAM_BUSINESS_ID}",
        "FACEBOOK_PAGE_ACCESS_TOKEN": "${FACEBOOK_PAGE_ACCESS_TOKEN}"
      },
      "status": "configured"
    },
    {
      "name": "odoo",
      "command": "python",
      "args": ["odoo_mcp.py"],
      "env": {
        "ODOO_URL": "${ODOO_URL}",
        "ODOO_DB": "${ODOO_DB}",
        "ODOO_USERNAME": "${ODOO_USERNAME}",
        "ODOO_PASSWORD": "${ODOO_PASSWORD}"
      },
      "status": "configured"
    },
    {
      "name": "filesystem",
      "command": "python",
      "args": ["-m", "mcp.servers.filesystem"],
      "env": {
        "VAULT_PATH": "Vault"
      },
      "status": "active"
    },
    {
      "name": "browser",
      "command": "npx",
      "args": ["-y", "@anthropic/browser-mcp"],
      "env": {
        "HEADLESS": "false"
      },
      "status": "active"
    }
  ],
  "human_in_the_loop": {
    "enabled": true,
    "approval_folder": "Vault/Pending_Approval",
    "approved_folder": "Vault/Approved",
    "rejected_folder": "Vault/Rejected",
    "sensitive_actions": [
      "payment",
      "email_send",
      "whatsapp_send",
      "social_post",
      "invoice_create",
      "external_api_call"
    ],
    "approval_timeout_hours": 24,
    "auto_approve_under": {
      "payment": 50,
      "invoice": 100
    }
  },
  "logging": {
    "level": "info",
    "file": "Logs/mcp_activity.log",
    "audit_trail": true,
    "retention_days": 90
  },
  "error_handling": {
    "max_retries": 3,
    "backoff_base": 1.0,
    "escalate_after": 3
  }
}
